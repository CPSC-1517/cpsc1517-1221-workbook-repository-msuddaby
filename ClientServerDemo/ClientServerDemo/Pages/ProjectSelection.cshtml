@page
@model WestWindWebApp.Pages.ProjectSelectionModel
@{
}

<table>
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Full Name</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FullName</td>
            </tr>

        }
    </tbody>
</table>

<h3>Shuffled Groups</h3>

@for (int i = 0; i < Model.GroupedStudents.Count; i++) {
    <h3>Group @i</h3>
    @foreach (var student in Model.GroupedStudents[i]) {
        <p>@student.FullName</p>
    }
    <br /><br />
}

